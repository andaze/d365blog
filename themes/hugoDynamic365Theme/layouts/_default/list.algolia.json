{{/* Generates a valid Algolia search index */}}

{{- $.Scratch.Add "index" slice -}}
{{- $section := $.Site.GetPage "section" .Section }}
{{- range .Site.AllPages -}}
  {{- if or (and (.IsDescendant $section) (and (not .Draft) (not .Params.private))) $section.IsHome -}}
    {{ $url:= .URL | absURL }}
    {{ $Scratch := newScratch}}
    {{ $Scratch.Set "url" "" }}

    {{ if in ($url) ("en") }}
        {{$seturl:= replace ($url)  "/dynamic365/en" "/en/dynamic365" }}
        {{ $Scratch.Set "url" $seturl }}
    {{ end }}
    {{ if in ($url) ("ja") }}
        {{$seturl:= replace ($url)  "/dynamic365/ja" "/ja/dynamic365" }}
        {{ $Scratch.Set "url" $seturl }}
    {{ end }}
    {{ $pageurl := $Scratch.Get "url" }}
    {{- $.Scratch.Add "index" (dict "objectID" .File.UniqueID "description" .Description "dir" .Dir "fuzzywordcount" .FuzzyWordCount "keywords" .Keywords "kind" .Kind "lang" .Lang "lastmod" .Lastmod.UTC.Unix "readingtime" .ReadingTime  "summary" .Summary "title" .Title  "url" $pageurl  "wordcount" .WordCount "section" .Section )}}
  {{- end -}}
{{- end -}}
{{- $.Scratch.Get "index" | jsonify -}}